{
	"env": {
		"browser": false,
		"commonjs": true,
		"es6": true,
		"node": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"extends": "eslint:recommended",
	"overrides": [
	],
	"rules": {
		"indent": [ "error", 2 ],
		"no-trailing-spaces": "error",
		"linebreak-style": [ "error", "windows" ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "never" ],
		"complexity": [ "error", 10 ],
		"no-const-assign": "warn",
		"no-this-before-super": "warn",
		"no-undef": "warn",
		"no-unreachable": "warn",
		"no-unused-vars": "warn",
		"constructor-super": "warn",
		"valid-typeof": "warn"
	}
}
